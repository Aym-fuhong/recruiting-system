<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.thoughtworks.twars.mapper.HomeworkQuizItemMapper">

    <resultMap id="homeworkQuizItemListMap" type="com.thoughtworks.twars.bean.HomeworkQuizItem">
        <id property="id" column="id"></id>
        <result column="description" property="description"></result>
        <result column="evaluateScript" property="evaluateScript"></result>
        <result column="evaluateRepository" property="evaluateRepository"></result>
        <result column="templateRepository" property="templateRepository"></result>
        <result column="homeworkQuizId" property="homeworkQuizId"></result>
    </resultMap>

    <select id="findByHomeworkQuizId" resultMap="homeworkQuizItemListMap">
        select * from homeworkQuizItem where homeworkQuizId = #{homeworkQuizId}
    </select>
</mapper>
