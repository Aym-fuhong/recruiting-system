<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thoughtworks.twars.data.UserMapper">
    <select id="getUserById" resultType="com.thoughtworks.twars.User">
        select * from Users where id = #{id}
    </select>

    <resultMap id="UserResult" type="com.thoughtworks.twars.User">
        <id property="id" column="id"></id>
        <result property="email" column="email"></result>
        <result property="mobilePhone" column="mobilePhone"></result>
    </resultMap>

    <select id="getAllUsers" resultMap="UserResult">
        select * from Users
    </select>

    <insert id="insertUser" parameterType="com.thoughtworks.twars.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO Users(email, mobilePhone, password, createDate)
        VALUES (#{email}, #{mobilePhone}, #{password}, UNIX_TIMESTAMP())
    </insert>
</mapper>